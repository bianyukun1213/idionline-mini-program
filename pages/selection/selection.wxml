<view class="root">
  <van-notice-bar wrapable text="没有您要查询的成语？服务器可能已尝试从其他数据源自动收录。您可以稍微等待，然后再次搜索。" />
  <van-cell-group wx:for="{{idioms2Disp}}" wx:key="index">
    <van-cell-group wx:for="{{idioms2Disp[index]}}" wx:key="index">
      <van-cell title="【{{item}}】" is-link url="/pages/idiom/idiom?id={{index}}" link-type="{{linkType}}"
        clickable="true" bind:click="onClick" />
    </van-cell-group>
  </van-cell-group>
  <view class="con" wx:if="{{tmp.length>1}}">
    <van-button aria-role="button" aria-label="上一页" wx:if="{{showPrev}}" class="btn" color="{{color}}"
      bind:click="onPrev">上一页</van-button>
    <Text class="text">{{page+1}}/{{tmp.length}}</Text>
    <van-button aria-role="button" aria-label="下一页" wx:if="{{showNext}}" class="btn" color="{{color}}"
      bind:click="onNext">下一页</van-button>
  </view>
</view>