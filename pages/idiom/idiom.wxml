<van-overlay style="pointer-events:none;" z-index="101" show="{{overlayOn}}" />
<view class="root">
  <van-panel wx:if="{{name!=null}}" title="{{name}}{{pinyin}}" desc="{{origin}}由{{lastEditor}}最后编辑于{{updateTime}}" use-footer-slot>
    <view class="content">
      <view class="defs" wx:for="{{defs}}" wx:key="index">
        <van-row style="margin-bottom:5px;">
          <van-col span="6">
            <van-tag mark size="large" color="{{color}}">来源</van-tag>
          </van-col>
          <van-col span="18">
            <text class="text">{{item['source']}}\n</text>
          </van-col>
        </van-row>
        <van-row>
          <van-col span="6">
            <van-tag id="{{index}}" mark size="large" color="{{color}}" bind:tap="onTTSTap">释义🔊</van-tag>
          </van-col>
          <van-col span="18">
            <text class="text" selectable="true" wx:if="{{item['isBold']==true}}" style="font-weight:bold;color:red;">{{item['text']}}\n</text>
            <text class="text" selectable="true" wx:else>{{item['text']}}\n</text>
            <!--条件渲染和列表渲染好像他妈不能一起用，不然结果好像是反的，这里先把条件渲染写block吧-->
            <block wx:if="{{item['examples']!=null}}">
              <text class="text" wx:for="{{item['examples']}}" wx:key="index" style="margin-top:5px;font-size:12px;color:gray;">{{item}}</text>
            </block>
            <block wx:if="{{item['addition']!=null}}">
              <text class="text" style="margin-top:5px;font-size:12px;color:blue;">{{item['addition']}}</text>
            </block>
            <block wx:if="{{item['links']!=null}}">
              <view class="btn" style="margin-top:5px;">
                <van-button class="btn_link" aria-role="button" aria-label="{{item}}" id="{{index}}" wx:for="{{defs[index]['links']}}" wx:key="index" bind:click="onClick" size="small" plain round color="{{color}}">{{item}}</van-button>
              </view>
            </block>
          </van-col>
        </van-row>
        <van-divider wx:if="{{index<defs.length-1}}" />
      </view>
    </view>
    <view class="footer" slot="footer">
      <van-button class="btn_func" aria-role="button" aria-label="纠错" color="{{color}}" bind:click="onCorrect" bind:longpress="onEdit">纠错</van-button>
      <van-button class="btn_func" aria-role="button" aria-label="接龙" color="{{color}}" bind:click="onSolitaire">接龙</van-button>
      <van-button class="btn_func" aria-role="button" aria-label="收藏" color="{{color}}" bind:click="onMark">收藏</van-button>
      <van-button class="btn_func" aria-role="button" aria-label="分享" color="{{color}}" bind:click="onShare" bind:longpress="onLongPress">分享</van-button>
    </view>
  </van-panel>
  <van-action-sheet show="{{show}}" actions="{{actions}}" bind:close="onClose" bind:select="onSelect" bind:cancel="onClose" cancel-text="取消" />
</view>
<view class="ad" wx:if="{{disableAdsLocal==false&&disableAdsRemote==false}}">
  <ad type="card" wx:if="{{platform=='QQ'}}" unit-id="48004368cf9b494df93f1c3ee7cd349b" bind:error="onAdError"></ad>
  <view class="xht_banner" style="width:100%;" wx:elif="{{platform=='WeChat'}}">
    <xht-ad class="xht_component" data-id="banner" adData="{{xhtad.adData}}" bindad:load="xhtadImgLoad" bind:click="xhtappoIntView" bind:close="xhtadClose">
    </xht-ad>
  </view>
  <canvasdrawer painting="{{painting}}" bind:getImage="eventGetImage" />
</view>