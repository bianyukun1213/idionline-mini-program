<view class="root">
  <van-panel wx:if="{{name!=null}}" title="{{name}}" desc="由{{lastEditor}}最后编辑于{{updateTime}}" use-footer-slot>
    <view class="content">
      <view class="defs" wx:for="{{defs}}" wx:key="{{index}}">
        <van-row style="margin-bottom:5px;">
          <van-col span="6">
            <van-tag mark size="large" color="{{tagColor}}">来源</van-tag>
          </van-col>
          <van-col span="18">
            <text class="text">{{item['source']}}\n</text>
          </van-col>
        </van-row>
        <van-row style="margin-bottom:5px;">
          <van-col span="6">
            <van-tag id="{{index}}" mark size="large" color="{{tagColor}}" bind:tap="onTTSTap">释义🔊</van-tag>
          </van-col>
          <van-col span="18">
            <text class="text" selectable="true" wx:if="{{item['isBold']==true}}" style="font-weight:bold;color:red;">{{item['text']}}\n</text>
            <text class="text" selectable="true" wx:else>{{item['text']}}\n</text>
          </van-col>
        </van-row>
        <van-row wx:if="{{item['addition']!=null}}" style="margin-bottom:5px;">
          <van-col span="6">
            <van-tag mark size="large" color="{{tagColor}}">附加</van-tag>
          </van-col>
          <van-col span="18">
            <text class="text" style="font-size:12px;color:gray;">{{item['addition']}}</text>
          </van-col>
        </van-row>
        <view class="btn" wx:if="{{item['links']!=null}}" style="margin-bottom:5px;">
          <van-button class="btn_link" id="{{index}}" wx:for="{{defs[index]['links']}}" wx:key="{{index}}" bind:click="onClick" size="small" plain round type="primary">{{item}}</van-button>
        </view>
        <view class="divLine" style="background:{{tagColor}};" />
      </view>
    </view>
    <view class="footer" slot="footer">
      <van-button type="primary" size="small" bind:click="onMarkClick" bind:longpress="onLongPress">加入收藏</van-button>
    </view>
  </van-panel>
</view>