<view class="root">
  <van-panel title="{{name}}" desc="出自{{source}}，由{{lastEditor}}最后编辑于{{updateTime}}" wx:if="{{name!=null}}">
    <view class="content">
      <view class="defs" wx:for="{{defs}}">
        <view class="def">
          <van-tag class="tag" mark size="small" type="primary">释义</van-tag>
          <text class="text">{{item['text']}}\n</text>
        </view>
        <view class="btn" wx:if="{{item['addition']!=null}}">
          <!--条件渲染链接按钮-->
          <van-button id="{{index}}" wx:if="{{index!=null}}" bind:click="onClick" size="mini" plain round type="primary" wx:for="{{defs[index]['links']}}">{{item}}</van-button>
        </view>
        <view class="addition" wx:if="{{item['addition']!=null}}">
          <van-tag mark size="small" type="success">附加</van-tag>
          <text>{{item['addition']}}</text>
        </view>
      </view>
    </view>
  </van-panel>
</view>