<view class="root">
  <van-field disabled value="{{name}}" label="名称" />
  <van-cell-group wx:for="{{updates}}" wx:key="{{index}}">
    <van-field id="{{index}}" wx:if="{{updates[index]!=undefined}}" placeholder="来源不能为空" value="{{updates[index]['source']}}" required clearable bind:change="onChangeSource" label="来源{{index+1}}" />
    <van-field id="{{index}}" wx:if="{{updates[index]!=undefined}}" type="textarea" placeholder="释义文本不能为空" value="{{updates[index]['text']}}" autosize required clearable bind:change="onChangeText" label="释义{{index+1}}" />
    <van-field id="{{index}}" wx:if="{{updates[index]!=undefined}}" type="textarea" placeholder="空" value="{{updates[index]['addition']}}" autosize clearable bind:change="onChangeAddition" label="附加文本" />
    <van-cell id="{{index}}" wx:if="{{updates[index]!=undefined}}" title="释义文本使用红色加粗字体显示" value-class="value-class" clickable bind:click="check">
      <van-checkbox id="{{index}}" value="{{updates[index]['isBold']}}" catch:tap="check" />
    </van-cell>
    <van-button class="btn" aria-role="button" aria-label="移除" id="{{index}}" wx:if="{{canBeRemoved[index]&&updates[index]!=undefined}}" type="danger" size="large" bind:click="onDeleteItem">移除</van-button>
  </van-cell-group>
  <view class="function">
    <van-button class="btn" aria-role="button" aria-label="新建" color="{{color}}" bind:click="onAdd" bind:longpress="onBsonEdit">新建</van-button>
    <van-button class="btn" aria-role="button" aria-label="提交" color="{{color}}" bind:click="onSubmit">提交</van-button>
    <van-button class="btn" aria-role="button" aria-label="删除" type="danger" bind:click="onDelete">删除</van-button>
  </view>
</view>