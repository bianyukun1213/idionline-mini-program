<view class="root">
  <van-notice-bar mode="closeable" text="{{text}}" wx:if="{{text!=null}}" />
  <van-search value="{{value}}" maxlength="12" placeholder="{{placeHolder}}" bind:search="onSearch" />
  <image class="logo" src="{{logoUrl}}" mode="aspectFit" />
  <van-popup show="{{showPopup}}" position="bottom" bind:touchstart="onTouchStart" bind:touchmove="onTouchMove" bind:touchend="onTouchEnd" bind:close="onClose">
    <van-panel class="panel" title="{{idiName}}{{pinyin}}">
      <view class="content">
        <view class="defs" wx:for="{{defs}}" wx:key="{{index}}">
          <van-row style="margin-bottom:5px;">
            <van-col span="6">
              <van-tag mark size="large" color="{{tagColor}}">来源</van-tag>
            </van-col>
            <van-col span="18">
              <text class="text">{{item['source']}}\n</text>
            </van-col>
          </van-row>
          <van-row style="margin-bottom:5px;">
            <van-col span="6">
              <van-tag mark size="large" color="{{tagColor}}">释义</van-tag>
            </van-col>
            <van-col span="18">
              <text class="text" selectable="true" wx:if="{{item['isBold']==true}}" style="font-weight:bold;color:red;">{{item['text']}}\n</text>
              <text class="text" selectable="true" wx:else>{{item['text']}}\n</text>
              <!--条件渲染和列表渲染好像他妈不能一起用，不然结果好像是反的，这里先把条件渲染写block吧-->
              <block wx:if="{{item['examples']!=null}}">
                <text class="text" wx:for="{{item['examples']}}" wx:key="{{index}}" style="margin-top:5px;font-size:12px;color:gray;">{{item}}</text>
              </block>
            </van-col>
          </van-row>
          <van-row wx:if="{{item['addition']!=null}}" style="margin-bottom:5px;">
            <van-col span="6">
              <van-tag mark size="large" color="{{tagColor}}">附加</van-tag>
            </van-col>
            <van-col span="18">
              <text class="text" style="font-size:12px;color:gray;">{{item['addition']}}</text>
            </van-col>
          </van-row>
          <view class="divLine" style="background:{{tagColor}};" />
        </view>
      </view>
    </van-panel>
  </van-popup>
</view>
<view class="slide" wx:if="{{idiName!=null}}" bind:touchstart="onTouchStart" bind:touchmove="onTouchMove" bind:touchend="onTouchEnd" bind:touchcancel="onTouchCancel">
  <view class="text_bottom">上划查看每日成语</view>
</view>